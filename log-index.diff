+    public static IEnumerable LogIndexTestsData
+    {
+        get
+        {
+            yield return new TestCaseData(
+                "AddressA",
+
+                FilterBuilder.New()
+                    .FromBlock(LogIndexFrom).ToBlock(LogIndexTo)
+                    .WithAddress(TestItem.AddressA)
+                    .Build(),
+
+                LogIndexRanges[TestItem.AddressA]
